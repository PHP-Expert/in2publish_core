root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

[*.css]
indent_style = tab
indent_size = 4

[*.html]
indent_style = tab
indent_size = 4

[*.scss]
indent_style = space
indent_size = 2

[*.js]
indent_style = tab
indent_size = 4

[*.json]
indent_style = tab
indent_size = 4

[*.php]
indent_style = space
indent_size = 4

[*.md]
indent_style = space
indent_size = 4

[{*.yaml, *.yml, package.json}]
indent_style = space
indent_size = 2

[*.t3s]
indent_style = space
indent_size = 2

[*.xlf]
indent_style = tab
indent_size = 4

[*.xml.dist]
indent_style = tab
indent_size = 4
ij_continuation_indent_size = 8

[*.sql]
indent_style = tab
indent_size = 2

[.eslintrc]
indent_style = space
indent_size = 4

# https://docs.typo3.org/m/typo3/reference-coreapi/10.4/en-us/CodingGuidelines/CglTypoScript/Index.html
[{ext_typoscript_setup.txt, *.typoscript, setup.txt, constants.txt, setup.ts, constants.ts}]
indent_style = space
indent_size = 2
